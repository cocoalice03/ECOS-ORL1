# OpenAI API Keys
OPENAI_API_KEY=your_openai_key_here

# Database (required for API health and any DB access)
# Example (Supabase / Postgres):
# DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DBNAME?sslmode=require
DATABASE_URL=

# Pinecone API Keys
PINECONE_API_KEY=your_pinecone_key_here
PINECONE_INDEX_NAME=arthrologie-du-membre-superieur
PINECONE_NAMESPACE=default

# Firebase Configuration pour Vite (client)
# Get these values from: Firebase Console > Project Settings > General
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Configuration pour Node.js (serveur)
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (required for server-side auth verification)
# Download service account key from: Firebase Console > Project Settings > Service Accounts
FIREBASE_CLIENT_EMAIL=your-service-account-email@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Optional server config (local dev)
# PORT=5000
# NODE_ENV=development

# Other configuration
# Add any other environment variables your application needs here
